<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catalogue_bckg"
    tools:context=".CatalogueActivity">

    <!--    Pagina 1   -->

    <TextView
        android:id="@+id/ch_select_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Employees Catalogue"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-132dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/buton_bianca"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        android:src="@drawable/bianca"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/biance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Bianca Enache"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/buton_bianca"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp" />

    <ImageView
        android:id="@+id/buton_carolina"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        android:src="@drawable/carolina"
        app:layout_constraintLeft_toRightOf="@+id/buton_bianca"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/carolina_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Carolina RoÈ™u"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/buton_carolina"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="268dp" />

    <ImageView
        android:id="@+id/buton_dorin"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        android:src="@drawable/dorin"
        app:layout_constraintLeft_toRightOf="@id/buton_carolina"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="49dp" />

    <TextView
        android:id="@+id/dorin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Dorin Tecuceanu"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/buton_dorin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="57dp" />

    <!--    Pagina 2   -->

        <ImageView
            android:id="@+id/buton_lipan"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:paddingTop="70dp"
            android:src="@drawable/lipan"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="214dp"
            tools:layout_editor_absoluteY="36dp" />

        <ImageView
            android:id="@+id/buton_lucian"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:paddingTop="70dp"
            android:src="@drawable/lucian"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/buton_lipan"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="36dp" />

        <ImageView
            android:id="@+id/buton_popovici"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:paddingTop="70dp"
            app:layout_constraintLeft_toRightOf="@id/buton_lucian"
            android:src="@drawable/popovici"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="442dp"
            tools:layout_editor_absoluteY="36dp" />

        <!--    Pagina 3   -->

    <ImageView
        android:id="@+id/buton_srp"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        android:src="@drawable/srp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
            android:id="@+id/buton_tana"
            android:layout_width="180dp"
            android:layout_height="290dp"
            android:paddingTop="70dp"
            android:src="@drawable/tana"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/buton_srp"
            tools:layout_editor_absoluteX="-18dp"
            tools:layout_editor_absoluteY="36dp" />


    <Button
        android:id="@+id/next"
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:background="@drawable/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/previous"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:background="@drawable/previous_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/goBackButon"
        android:layout_width="146dp"
        android:layout_height="49dp"
        android:background="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/backToCharacterSelect"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:background="@drawable/menu_button"
        app:layout_constraintRight_toRightOf="@id/ch_select_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>