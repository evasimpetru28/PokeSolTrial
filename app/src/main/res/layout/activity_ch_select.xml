<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catalogue_bckg"
    tools:context=".CharacterSelectActivity">

    <TextView
        android:id="@+id/ch_select_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Choose your character"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-99dp" />

    <ImageView
        android:id="@+id/buton_miron"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        app:layout_constraintLeft_toRightOf="@+id/buton_mos"
        android:src="@drawable/miron"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
        android:id="@+id/buton_mos"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        android:src="@drawable/mos"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-18dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
        android:id="@+id/buton_vang"
        android:layout_width="180dp"
        android:layout_height="290dp"
        android:paddingTop="70dp"
        app:layout_constraintLeft_toRightOf="@id/buton_miron"
        android:src="@drawable/vang"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="442dp"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buton_miron"
        android:id="@+id/activity_first_button" />

    <Button
        android:id="@+id/goBackButon"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Back"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/catalogue"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Employee Catalogue"
        app:layout_constraintRight_toRightOf="@id/ch_select_title"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="515dp"
        tools:layout_editor_absoluteY="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>